{
    "compilerOptions": {
      "lib": ["es2017", "dom", "esnext.asynciterable"],
      "module": "commonjs",
      "noImplicitReturns": false,
      "outDir": "dist",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017"
    },
    "compileOnSave": true,
    "include": [
    "node_modules/@types/**/index.d.ts",
    "src/**/*"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  }